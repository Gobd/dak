{
  "name": "kasa-controller",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:relay": "concurrently -n vite,relay -c blue,green \"vite\" \"uv run --directory ../dashboard/services/home-relay python relay.py\"",
    "build": "tsc -b && vite build",
    "typecheck": "tsc --noEmit",
    "preview": "vite preview",
    "check": "pnpm typecheck && pnpm build",
    "analyze": "ANALYZE=true vite build"
  },
  "dependencies": {
    "@dak/kasa-client": "workspace:*",
    "@tanstack/react-query": "catalog:",
    "lucide-react": "catalog:",
    "react": "catalog:",
    "react-dom": "catalog:",
    "zustand": "catalog:"
  },
  "devDependencies": {
    "@dak/vite-shared-react": "workspace:*",
    "@tailwindcss/vite": "catalog:",
    "@types/node": "catalog:",
    "@types/react": "catalog:",
    "@types/react-dom": "catalog:",
    "@vitejs/plugin-react": "catalog:",
    "concurrently": "catalog:",
    "globals": "catalog:",
    "rollup-plugin-visualizer": "catalog:",
    "tailwindcss": "catalog:",
    "typescript": "catalog:",
    "vite": "catalog:",
    "vite-plugin-pwa": "catalog:"
  }
}
