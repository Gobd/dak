{
  "name": "kasa-controller",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:relay": "concurrently -n vite,relay -c blue,green \"vite\" \"uv run --directory ../dashboard/services/home-relay python relay.py\"",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit",
    "format:check": "prettier --check .",
    "format": "prettier --write .",
    "preview": "vite preview",
    "check": "pnpm lint && pnpm format:check && pnpm typecheck && pnpm build",
    "analyze": "ANALYZE=true vite build"
  },
  "dependencies": {
    "@tanstack/react-query": "catalog:",
    "lucide-react": "catalog:vite",
    "react": "catalog:vite",
    "react-dom": "catalog:vite",
    "zustand": "catalog:"
  },
  "devDependencies": {
    "concurrently": "catalog:",
    "@eslint/js": "catalog:",
    "@types/node": "catalog:",
    "@tailwindcss/vite": "catalog:vite",
    "@types/react": "catalog:vite",
    "@types/react-dom": "catalog:vite",
    "@vitejs/plugin-react": "catalog:vite",
    "eslint": "catalog:",
    "eslint-plugin-react-hooks": "catalog:",
    "eslint-plugin-react-refresh": "catalog:vite",
    "globals": "catalog:",
    "prettier": "catalog:",
    "tailwindcss": "catalog:vite",
    "typescript": "catalog:",
    "typescript-eslint": "catalog:vite",
    "rollup-plugin-visualizer": "catalog:vite",
    "vite": "catalog:vite",
    "vite-plugin-pwa": "catalog:vite",
    "@dak/vite-shared-react": "workspace:*"
  }
}
