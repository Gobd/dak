{
  "$schema": "./node_modules/oxlint/configuration_schema.json",
  "plugins": ["react"],
  "categories": {
    "correctness": "error",
    "suspicious": "warn",
    "perf": "warn",
    "pedantic": "off",
    "style": "off",
    "restriction": "off"
  },
  "rules": {
    "no-unused-vars": ["warn", { "argsIgnorePattern": "^$", "varsIgnorePattern": "^$" }],
    "react/rules-of-hooks": "error",
    "react/exhaustive-deps": "warn"
  },
  "ignorePatterns": ["dist", "node_modules", ".venv", "*.config.js", "*.config.ts", "**/generated"]
}
