{
  "name": "dashboard",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "serve -l 8080",
    "lint": "eslint .",
    "lint:sh": "shellcheck scripts/*.sh",
    "typecheck": "echo 'No typecheck configured'",
    "format:check": "prettier --check .",
    "format": "prettier --write .",
    "build": "rm -rf dist && mkdir -p dist && cp *.html *.css *.js _headers dist/ && cp -r widgets dist/",
    "check": "pnpm lint && pnpm lint:sh && pnpm format:check && pnpm typecheck && pnpm build"
  },
  "devDependencies": {
    "@eslint/js": "catalog:",
    "eslint": "catalog:",
    "globals": "catalog:",
    "prettier": "catalog:",
    "serve": "^14.2.4",
    "shellcheck": "^4.1.0"
  }
}
